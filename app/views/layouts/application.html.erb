<!DOCTYPE html>
<html>
<head>
  <title>Explore Boston</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,700i|Roboto+Mono:400,400i,700i" rel="stylesheet">

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_pack_tag    'application' %>
    <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="head-bckg">
    <h1 class="title_idex">Boston Explorer</h1>
  </header>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <p><a href="/">Home</a></p>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <%- flash.each do |key, value| -%>
          <li id="flash" class="flash flash-<%= key %>">
            <%= value %>
          </li>
        <%- end -%>
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
